---
layout: default
---
<header class="container clearfix">
	<h1 class="h3 pull-left"><%= @site.title %></h1>
	<h2 class="h5 pull-right"><%= @site.slogan %></h2>
</header>

<main>
	<header class="text-center">
		<h1 class="post-title"><%= @document.title %></h1>
		<div class="meta">Posted on: <%= @document.date.toLocaleDateString() %></div>
	</header>
	<%- @content %>
	<footer class="container">
		<%- @getDisqus() %>
	</footer>
</main>